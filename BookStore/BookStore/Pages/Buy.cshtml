@page
@model BookStore.Pages.BuyModel
@{
}


<h2>Your Cart</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Book</th>
            <th>Author</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>Subtotal</th>
        </tr>
 </thead>
 
<tbody>
    @foreach (var i in Model.cart.Items)
    {
        <tr>
            <td>@i.booker.Title</td>
            <td>@i.booker.Author</td>
            <td>@i.Quantity</td>
            <td>@i.booker.Price.ToString("c")</td>
            <td>@((i.Quantity * i.booker.Price).ToString("c"))</td>
        </tr>
    }

</tbody>

<tfoot>
    <tr>
        <td colspan="4">Total:</td>
        <td>@Model.cart.CalculateTotal().ToString("c")</td>
    </tr>
</tfoot>
</table>

<div>
<a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
</div>
